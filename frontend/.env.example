# ===========================================
# Advancia Pay Frontend - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ----- API Configuration -----
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ----- App Configuration -----
NEXT_PUBLIC_APP_NAME=Advancia Pay
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----- Stripe (Client-side) -----
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ----- Feature Flags -----
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_ENABLE_MEDBEDS=true
NEXT_PUBLIC_ENABLE_DOCTOR_CONSULTATIONS=true
NEXT_PUBLIC_ENABLE_REWARDS=true

# ----- Organization (for Schema.org JSON-LD & SEO) -----
NEXT_PUBLIC_ORG_NAME=Advancia
NEXT_PUBLIC_ORG_URL=https://advancia.com
NEXT_PUBLIC_LOGO_URL=https://advancia.com/logo.png
NEXT_PUBLIC_ORG_SAMEAS=https://twitter.com/advancia,https://linkedin.com/company/advancia

# ----- Trust & Reviews -----
# Trustpilot (optional - for review widget)
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_UNIT_ID=
NEXT_PUBLIC_TRUSTPILOT_DOMAIN=

# Only set these if you have accurate, verified ratings - DO NOT FAKE
# NEXT_PUBLIC_RATING_VALUE=4.8
# NEXT_PUBLIC_RATING_COUNT=1234

# ----- SEO & Verification -----
# Google Search Console verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# ----- Analytics (Optional) -----
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# ----- Map Services (if needed) -----
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ----- Social Auth (if needed) -----
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-oauth-client-id

# ----- Cloudflare Turnstile (CAPTCHA Alternative) -----
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# ----- Development -----
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# ----- Security -----
# Optional: enable lockdown mode (redirect all pages to /auth/login except allowlist)
# NEXT_PUBLIC_LOCKDOWN=true

# ----- Build Configuration -----
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=false