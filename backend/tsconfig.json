{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2020"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes.bak",
    "src/services/ethGateway.ts",
    "src/services/aiAnalyticsService.ts",
    "src/services/oalService.ts",

    "src/services/custodialWalletService.ts",
    "src/services/trustpilotInvitationService.ts",
    "src/routes/trustScore.ts",
    "src/tracing.ts",
    "src/utils/fakeDataGenerator.ts",
    "src/rpa/scheduler.ts",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
