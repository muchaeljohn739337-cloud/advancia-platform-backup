{
  "name": "advancia-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,js --ignore '*.test.ts' --ignore '*.spec.ts' --delay 1000ms --exec ts-node src/index.ts",
    "dev:fast": "nodemon --watch src --ext ts,js --ignore '*.test.ts' --ignore '*.spec.ts' --delay 500ms --exec ts-node --transpile-only src/index.ts",
    "dev:trust": "ts-node src/index.trust.ts",
    "dev:minimal": "ts-node src/index.minimal.ts",
    "worker": "ts-node src/workers/notificationWorker.ts",
    "build": "node build.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:check": "eslint src --ext .ts,.js",
    "lint:strict": "eslint src --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "migrate:deploy": "npx prisma migrate deploy",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs advancia-backend",
    "pm2:monit": "pm2 monit",
    "migrate": "node src/index.js migrate",
    "seed": "node src/seed.js",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:verbose": "npm test -- --verbose",
    "migrate:test": "cross-env NODE_ENV=test DATABASE_URL=\"$TEST_DATABASE_URL\" npx prisma migrate deploy",
    "seed:test": "cross-env NODE_ENV=test DATABASE_URL=\"$TEST_DATABASE_URL\" node scripts/seed-test-data.js",
    "db:setup:test": "node scripts/setup-test-db-local.js",
    "db:setup:test:docker": "node scripts/setup-test-db-docker.js",
    "db:setup:test:simple": "node scripts/setup-test-db-simple.js",
    "db:setup:test:full": "node scripts/setup-test-db.js",
    "db:reset:test": "cross-env NODE_ENV=test DATABASE_URL=\"$TEST_DATABASE_URL\" npx prisma migrate reset --force --skip-seed",
    "test:db": "node scripts/test-db-runner.js",
    "test:db:setup": "node scripts/test-db-runner.js --setup",
    "test:db:reset": "node scripts/test-db-runner.js --reset",
    "test:db:seed": "node scripts/test-db-runner.js --seed",
    "test:db:health": "node scripts/test-db-runner.js --health",
    "test:db:benchmark": "node scripts/test-db-runner.js --benchmark",
    "test:db:cleanup": "node scripts/test-db-runner.js --cleanup",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:studio:test": "cross-env DATABASE_URL=\"$TEST_DATABASE_URL\" npx prisma studio",
    "gen:password": "ts-node scripts/generate-password.ts",
    "gen:secret": "ts-node scripts/generate-password.ts --hex 64",
    "generate:secrets": "ts-node scripts/generate-secrets.ts",
    "verify:env": "ts-node scripts/verify-env.ts",
    "verify:db": "ts-node scripts/verify-migrations.ts",
    "verify:security": "ts-node scripts/security-audit.ts",
    "verify:api": "ts-node scripts/verify-api.ts",
    "verify:production": "ts-node scripts/verify-production.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.71",
    "@datadog/datadog-api-client": "^1.47.0",
    "@faker-js/faker": "^9.9.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.0",
    "@opentelemetry/instrumentation": "^0.54.0",
    "@opentelemetry/instrumentation-express": "^0.54.0",
    "@opentelemetry/instrumentation-http": "^0.54.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/instrumentation": "^7.0.0",
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "@sentry/tracing": "^7.120.4",
    "@types/bull": "^3.15.9",
    "ai": "^5.0.98",
    "amqplib": "^0.10.9",
    "argon2": "^0.44.0",
    "bcryptjs": "^2.4.3",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.0",
    "bull": "^4.16.5",
    "chart.js": "^4.5.1",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "7.0.0",
    "https-proxy-agent": "^7.0.5",
    "ioredis": "^5.8.2",
    "jose": "^6.1.2",
    "jsonwebtoken": "9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "pg": "8.13.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "react-chartjs-2": "^5.3.1",
    "redis": "^5.9.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socks-proxy-agent": "^8.0.4",
    "speakeasy": "^2.0.0",
    "stripe": "^20.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tiny-secp256k1": "^2.2.4",
    "validator": "^13.15.23",
    "web-push": "^3.6.7",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@prisma/client": "^7.0.0",
    "@types/amqplib": "^0.10.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.25",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.3",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.15.10",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "axios": "^1.13.2",
    "chai": "4.3.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^14.0.0",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "nodemon": "3.0.2",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2",
    "prisma": "^7.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
