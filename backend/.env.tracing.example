# OpenTelemetry Tracing Configuration
# Add these to your .env file to configure tracing

# Enable/disable tracing (default: true)
OTEL_TRACING_ENABLED=true

# OTLP endpoint for trace export (default: AI Toolkit local endpoint)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Service name for trace identification (default: advancia-backend)
OTEL_SERVICE_NAME=advancia-backend

# For production, you can export to other observability platforms:
# Jaeger: http://localhost:14268/api/traces
# Zipkin: http://localhost:9411/api/v2/spans
# New Relic: https://otlp.nr-data.net:4318/v1/traces
# Datadog: http://localhost:4318/v1/traces
# Honeycomb: https://api.honeycomb.io/v1/traces
